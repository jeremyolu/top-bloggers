@model TopBloggers.Models.Author

@{
    ViewBag.Title = "Register Author";
}

<div id="register">
    <div id="register-container" class="container" data-aos="fade-left">
        <div class="author-register-form-container">
            <h1>Register</h1>
            @using (Html.BeginForm("Register","Account", FormMethod.Post, new  {enctype = "multipart/form-data"}))
            {
                @Html.AntiForgeryToken()
                <div class="input-area">
                    @Html.LabelFor(model => model.Name)
                    <i class="fa fa-asterisk error"></i>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "input-contact-field", placeholder = "enter name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "validation-error" })
                </div>
                <div class="input-area">
                    @Html.LabelFor(model => model.Surname)
                    <i class="fa fa-asterisk error"></i>
                    @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "input-contact-field", placeholder = "enter surname" } })
                    @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "validation-error" })
                </div>
                <div class="input-area">
                    @Html.LabelFor(model => model.Email)
                    <i class="fa fa-asterisk error"></i>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input-contact-field", placeholder = "enter email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validation-error" })
                </div>
                <div class="input-area">
                    @Html.LabelFor(model => model.Password)
                    <i class="fa fa-asterisk error"></i>
                    @Html.EditorFor(model => model.Password, null, new { htmlAttributes = new { @class = "input-contact-field", placeholder = "enter password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation-error" })
                </div>
                <div class="input-area">
                    <input type="file" name="file" title="uploading an image will help boost your views and likes"/>
                </div>
                <hr>
                <p>By creating an account you agree to our <a href="#">terms & conditions</a>.</p>

                <input type="submit" value="Register" class="button submit-btn" />

                <div class="signin-container">
                    <p>Already have an account? @Html.ActionLink("Login", "Login")</p>
                </div>
            }
        </div>
    </div>
</div>

